{
  "name": "TSUTAYA Comic Release Calendar",
  "version": "1.0.0",
  "description": "TSUTAYAコミックレンタルリリースカレンダーに、Google Calendar登録へのリンクを追加します",
  "content_scripts": [{
    "matches": ["https://www.discas.net/netdvd/comic-rental/releaseCalendar*"],
    "js": ["rewriter.js"],
    "run_at": "document_end"
  }],
  "permissions": ["https://www.discas.net/", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "calendar128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "calendar32.png"
    },
    "default_title": "TSUTAYAコミックレンタルリリースカレンダー"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
